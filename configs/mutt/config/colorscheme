color quoted2		  color8  default
color quoted3		  color0  default
color quoted4		  color0  default
color quoted5		  color0  default

color body		#2d4f67 default		[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+               # email addresses
color body	  #7e9cd8 default		(https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+        # URLs
color body		#c8c093 default		(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$) # *bold* text
color body		#c8c093 default		(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)     # _underlined_ text
color body		#c8c093 default		(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)     # /italic/ text
